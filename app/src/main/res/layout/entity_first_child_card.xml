<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="13dp"
    app:cardBackgroundColor="@color/second_cardBackgroundColor"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DEFINITION"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="定义" />

                <TextView
                    android:id="@+id/definition_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgEntity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/imageview_placeholder"
                    android:maxHeight="300dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizontal_layout_for_relations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relationship_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:text="关系"
                android:textSize="17sp"
                android:textColor="@android:color/darker_gray"/>

            <ImageButton
                android:id="@+id/load_more_relations"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/load_more_button" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relations_may_gone_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <include layout="@layout/entity_second_child_card" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/horizontal_layout_for_properties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/properties_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:text="属性"
                android:textSize="17sp"
                android:textColor="@android:color/darker_gray"/>

            <ImageButton
                android:id="@+id/load_more_properties"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/load_more_button" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/properties_may_gone_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <include layout="@layout/entity_second_child_card" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>